{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs", 
      "moduleResolution": "node",
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "declaration": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "typeRoots": ["node_modules/@types"],
      "types": ["jest", "node"]
    },
    "ts-node": {
      "transpileOnly": true,
    },
    "include": ["src/index.ts"],
}